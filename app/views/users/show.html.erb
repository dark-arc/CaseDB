<% cache(@user) do %>

<%= content_for :title, @user.username %>

<%= content_tag :div, class: [:email,:information] do %>
<%= content_tag :span, t(:emailAddress), class: :label %>
<%= content_tag :span, @user.email %>
<% end %>

<%= content_tag :div, class: [:created,:information] do %>
<%= content_tag :span, t(:created), class: :label %>
<%= content_tag :span, @user.created_at %>
<% end %>

<%= content_tag :div, class: [:created,:information] do %>
<%= content_tag :span, t(:theme), class: :label %>
<%= content_tag :span, @user.theme %>
<% end %>

<%= content_tag :h2, t(:roles) %>
<%= content_tag :ul, class: :roles do  %>
<% @user.roles.each do |v| %>
<%= content_tag :li, v %>
<% end %>
<% end %>
<% end %>
