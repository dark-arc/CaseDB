<% if errors.any? %>
    <%= content_tag(:h2) do %>
      <%= pluralize(errors.count, "error") %> 
      <%= t('validation.preventsave')%>:
    <% end %>
  <%= content_tag(:ul, :class => "error display") do %>
    <% errors.full_messages.each do |e| %>
      <%= content_tag(:li, :class => "error") do %>
	<%= e %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
