<%= content_tag(:nav) do %>
	<%= link_to t('home.index.title'), index_path %>
	<%= link_to t('case_files.index.title'), case_files_path %>
	<%= link_to t('people.index.title'), people_path %>
	<%= link_to t('home.about.title'), about_path %>
	<%= content_tag(:aside) do %>
	<% if signed_in? %>
	<%= link_to icon('person','Edit Account'), edit_user_path(current_user) %>
	<%= link_to icon('account-logout','Sign out'), session_path(current_user), method: :delete %>
	<% else %>
	<%= link_to icon('account-login','Login'), new_session_path %>
	<%= link_to icon("pencil","Register"), new_user_path %>
	<% end %>
	<% end %>
<% end %>
