<% content_for(:title, @person.name) %>

<% content_for(:sidebar) do %>
  <%= link_to t('actions.edit'), edit_person_path(@person) %>
  <%= link_to t('actions.delete'), @person, method: :delete, data: { confirm: "#{t('actions.delete_confirm')}" } %>
	<%= t('person.dob') %>
	<% if @person.birth.empty? %>
		<%= link_to t('actions.addDOB'), new_link_path(:person_id => @person, :event_type => :birth) %>
	<% else %>
		<%= content_tag(:date) do %>
		<%= @person.birth.first.date  %>
		<% end %>
	<% end %>
	
	<%= t('person.dod') %>
	<% if @person.death.empty? %>
		<%= link_to t('actions.addDOD'), new_link_path(:person_id => @person, :event_type => :death) %>
	<% else %>
		<%= content_tag(:date) do %>
		<%= l @person.death.first.date  %>
		<% end %>
	<% end %>
<% end %>

<%= render(@person) %> 

