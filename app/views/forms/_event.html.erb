<%= render 'forms/error', :errors => @event.errors %>

<%= form_for @event do |f| %>
	<%= f.label :body %>
	<%= f.text_area :body %>
	
	<%= f.label :date %>
	<%= f.date_select :date,
	:start_year => Time.now.year - 500,
	:end_year => Time.now.year %>
	
	<% if defined? @case %>
		<%= f.label :case_file_id %>
		<%= f.collection_select :case_file_id, CaseFile.all, :id, :name %>
	<% end %>
	
	<% if defined? @link %>
		<%= f.fields_for :event_people, @link do |e| %>
			<%= e.label :person_id %>
			<%= e.select :person_id,
			Person.all.collect{|c| [c.name,c.id] } %>
			<%= e.label :event_type_id %>
			<%= e.select :category,
			EventPerson.categories.collect{|c| [c.first]} %>
		<% end %>
	<% end %>
	
	<%= f.submit %>
<% end %>
