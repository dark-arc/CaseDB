<%= content_tag(:article) do %>
<%= content_tag(:date) do %>
<%= link_to l(event.date), event %>
<% end %>
<%= content_tag(:time, event.time) %>
<% if  locals[:case] %>
<% if event.case_name != nil %>
<%= link_to event.case_name, event.case_file %>
<% else %>
<%= content_tag(:span, 'link to case linker') %>
<% end %>
<% end %>

<% if locals[:body] %>
<%= markdown event.body %>
<% end %>
<% end %>